@model IEnumerable<LsTourGroup>
<style>
    div {
        display: block;
    }

    * {
        outline: none;
    }

    a {
        width: -webkit-fill-available;
        height: 100%;
    }

    .super-card {
        background-color: white;
        border-radius: 6px;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        object-fit: cover;
        transition: all .2s linear;
        height: 360px;
        text-align: left;
        box-shadow: 0 1px 1px rgba(0,0,0,0.1);
        height: auto;
    }

        .super-card.card-auto-height {
            height: 100%;
        }

        .super-card .card-bg {
            border-radius: 4px;
            background-image: linear-gradient(to top, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 30%, rgba(0,0,0,0.01) 50%, rgba(0,0,0,0) 100%);
            height: 150px;
        }

        .super-card .info {
            bottom: 0px;
            left: 0px;
            display: inline-block;
            padding: 15px 15px;
        }

            .super-card .info .title {
                line-height: 1;
                color: white;
                margin-bottom: 10px;
                font-size: 2vw;
                font-weight: bold;
                text-shadow: 0 0 2px rgba(0,0,0,0.3);
            }

            .super-card .info .description {
                color: white;
                font-size: 16px;
                text-shadow: 0 0 2px rgba(0,0,0,0.3);
            }

    .grid__item {
        padding: 0px;
        margin-bottom: 0px;
        box-shadow: 0 1px 1px rgba(0,0,0,0.1);
    }

    .grid__container {
        display: grid;
        grid-auto-columns: auto;
        grid-auto-rows: auto;
        grid-auto-flow: row;
        grid-gap: 8px;
    }

    .grid__container--popular {
        grid-template-columns: [col1] 33.333% [col2] 33.333% [col3] 32.333% [end];
        grid-template-rows: [row1] auto [row2] auto [row3] auto [row4] auto [end];
    }

        .grid__container--popular .grid__item--1 {
            grid-column: 1/3;
            grid-row: 1/2;
        }

        .grid__container--popular .grid__item--2 {
            grid-column: 3/end;
            grid-row: 1/3;
        }

        .grid__container--popular .grid__item--6 {
            grid-column: 1/2;
            grid-row: 3/5;
        }

        .grid__container--popular .grid__item--7 {
            grid-column: 2/end;
            grid-row: 3/4;
        }

    .no-padding {
        padding: 0px;
    }

    .v-margin-bottom-30 {
        margin-bottom: 30px;
    }

    .v-margin-top-30 {
        margin-top: 30px;
    }
</style>

<div class="col-xs-12 no-padding v-margin-top-30 v-margin-bottom-30">
    <div class="col-xs-12 no-padding heading">
        <h2 class="heading__title">Điểm đến yêu thích trong nước</h2>
        <p class="heading__description">Lên rừng xuống biển. Trọn vẹn Việt Nam</p>
    </div>
    <!--<div class="headLineDivider"></div>-->
    <div class="col-xs-12 no-padding">
        <div class="grid__container grid__container--popular ">
            @{
                int dem = 1;
                int dem2 = 0;
            }
            @foreach (var item in Model)
            {
                if (dem2 > 0)
                {
                    <div class="grid__item grid__item--8">
                        <div class="col-xs-12 super-card" style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs"> 212 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
                if (dem == 8)
                {
                    <div class="grid__item grid__item--8">
                        <div class="col-xs-12 super-card" style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs"> 56 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    dem++;
                    dem2++;
                }
                if (dem == 7)
                {
                    <div class="grid__item grid__item--7">
                        <div class="col-xs-12 super-card" style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs"> 151 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    dem++;
                }
                if (dem == 6)
                {
                    <div class="grid__item grid__item--6">
                        <div class="col-xs-12 super-card card-auto-height" style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow" style="height:100%">
                                    <div class="info">
