<style>
    #wp-slide {
        width: 300px;
        height: auto;
        margin-right: 15px;
    }

    .card-img {
        border-radius: 7px;
        background-image: linear-gradient(to top, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 30%, rgba(0,0,0,0.01) 50%, rgba(0,0,0,0) 100%);
    }

    .super-card {
        background-color: white;
        border-radius: 6px;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        object-fit: cover;
        transition: all .2s linear;
        height: 360px;
        text-align: left;
        box-shadow: 0 1px 1px rgba(0,0,0,0.1);
    }

    .super-card {
        background-color: white;
        border-radius: 6px;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        object-fit: cover;
        transition: all .2s linear;
        height: 360px;
        text-align: left;
        box-shadow: 0 1px 1px rgba(0,0,0,0.1);
    }

    .shadow {
        box-shadow: 3px 3px 3px;
        border-radius: 8px;
    }

        .shadow:hover {
            color: #2FA1B3;
        }

    .super-card {
        background-color: white;
        border-radius: 6px;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        object-fit: cover;
        transition: all .2s linear;
        height: 270px;
        text-align: left;
        box-shadow: 0 1px 1px rgba(0,0,0,0.1);
    }


    #second {
        position: relative;
        z-index: -1;
    }

    .no-padding {
        padding: 0px;
    }
</style>
<div class="col-xs-12 no-padding">
    <h2 class="heading__title">Du lịch an toàn</h2>
    <p class="heading__description">Nâng cao sức khỏe, cân bằng cuộc sống</p>
</div>
<div id="theme" class="owl-carousel owl-loaded owl-drag ">
    @foreach (var item in Model)
    {
        <div class="item shadow" style="display:block;">
            <div class="grid__item grid__item--1 item" style="display: block;">
                <div class="col-xs-12 super-card lazy " data-src="@item.Image" data-was-processed="true" style="background-image: url('@item.Image'); height:270px">
                    <!--style="background-image: url('img');"-->
                    <a href="/chu-de/khach-san-khoe-manh" target="_blank">
                        <div class="col-xs-12 card-bg" style="height:100%">
                            <div class="info" style="position:absolute">
                                <p class="title">@item.Title</p>

                                <p class="description">@item.Description<span style="text-decoration:underline;">38 khách sạn</span></p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }


</div>

<script src="~/vendor/jquery/jquery.min.js"></script>
<script defer src="~/owlcarousel/owl.carousel.min.js"></script>
<script>
    $(document).ready(function () {
        $("#theme").owlCarousel({
        loop: true,
            autoplay: true,
            autoplayTimeout: 3000,
            autoplayHoverPause: true,
            margin: 10,
            lazyLoad: true,
            responsiveClass: true,
            responsive: {
                0: {
                items: 2,
                    loop: true
                },
                600: {
                items: 3,
                    loop: true
                },
                1000: {
                items: 4,
                    loop: true
                }
            }
        })
    });
</script>

