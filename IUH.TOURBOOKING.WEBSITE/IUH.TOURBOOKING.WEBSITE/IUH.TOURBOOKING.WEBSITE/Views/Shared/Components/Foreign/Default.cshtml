@model IEnumerable<LsTourGroup>
<style>
    .grid__container--popular-2 {
        grid-template-columns: [col] 24.5% [col] 24.5% [col] 24.5% [col] 24.7%;
        grid-template-rows: [row] auto [row] auto [row] auto [end];
    }

    .grid1__item--1 {
        grid-column: col / span 2;
        grid-row: row;
    }

    .grid1__item--2 {
        grid-column: col 3 / span 2;
        grid-row: row;
    }

    .grid1__item--3 {
        grid-column: col;
        grid-row: row 2;
    }

    .grid1__item--4 {
        grid-column: col 2 / span 3;
        grid-row: row 2;
    }

    .grid1__item--5 {
        grid-column: col / span 4;
        grid-row: row 3;
    }
</style>
<div class="col-xs-12 no-padding v-margin-top-30 v-margin-bottom-30">
    <div class="col-xs-12 no-padding heading">
        <h2 class="heading__title"> Điểm đến yêu thích nước ngoài</h2>
        <p class="heading__description">Bao la thế giới. Bốn bể là nhà</p>
    </div>
    <!--<div class="headLineDivider"></div>-->
    <div class="col-xs-12 no-padding">
        <div class="grid__container grid__container--popular-2 super-cards">
            @{
                var dem = 1;
                var dem2 = 0;
            }
            @foreach (var item in Model)
            {
                if (dem2 > 0)
                {
                    <div class="grid__item">
                        <div class="col-xs-12 super-card" style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs">67 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
                if (dem == 5)
                {
                    <div class="grid__item grid1__item--5">
                        <div class="col-xs-12 super-card " style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs">2997 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    dem++;
                    dem2++;
                }
                if (dem == 4)
                {
                    <div class="grid__item grid1__item--4">
                        <div class="col-xs-12 super-card " style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs">2317 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    dem++;
                }
                if (dem == 3)
                {
                    <div class="grid__item grid1__item--3">
                        <div class="col-xs-12 super-card " style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs">466 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    dem++;
                }
                if (dem == 2)
                {
                    <div class="grid__item grid1__item--2">
                        <div class="col-xs-12 super-card " style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs">732 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    dem++;
                }
                if (dem == 1)
                {
                    <div class="grid__item grid1__item--1">
                        <div class="col-xs-12 super-card" style="background-image: url('@item.Image');">
                            <!--style="background-image: url('img');"-->
                            <a asp-controller="Product" asp-action="Index" target="_blank">
                                <div class="col-xs-12 card-bg shadow">
                                    <div class="info">
                                        <p class="title">@item.Title</p>

                                        <p class="description hidden-xs">67 khách sạn</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    dem++;
                }

            }
        </div>
    </div>
</div>

